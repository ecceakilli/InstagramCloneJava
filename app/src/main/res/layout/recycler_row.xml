<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/recyclerViewEmailText"
        android:layout_width="235dp"
        android:layout_height="26dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="User email text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recyclerViewImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerViewCommentText"
        android:layout_width="235dp"
        android:layout_height="26dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:text="Comment"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recyclerViewImageView"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewEmailText" />

    <ImageView
        android:id="@+id/recyclerViewImageView"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_gravity="left"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Pulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="#3F51B5"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewImageView"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewImageView"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewImageView"
        app:layout_constraintStart_toStartOf="@id/recyclerViewImageView"/>


    <TextView
        android:id="@+id/recyclerViewCommentDetailText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="CommentText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recyclerViewImageView"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewCommentText" />


</androidx.constraintlayout.widget.ConstraintLayout>